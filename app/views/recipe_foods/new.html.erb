 <h1>YESSS</h1>

 <%= form_with model: [@recipe, @recipe.recipe_foods.build], class: "form" do |f| %>

  <div class="field">
    <%= f.label :food, class: "label" %>
     <div class="select-option">
        <%= f.select :food_id, current_user.foods.collect {|food| [food.name, food.id] }, { include_blank: true} %>
     </div>
  </div>
  <div class="field">
    <%= f.label :quantity, class: "label" %>
    <div class="quality">
      <%= f.text_field :quantity, class: "input", type: "number", required: true, min: 0 %>
    </div>
  </div>

   <%# <%= f.hidden_field :recipe_id, value: recipe_food.recipe_id %>
<ul class = "food-form-errors">
      <%@recipe_food.errors.full_messages.each do |msg|%>
        <li class = "food-form-errors-list">
          <%= msg%>
        <%binding.pry%>
        </li>
      <%end%>
</ul>


  <div class="actions">
    <%= f.submit class: "button is-success" %>
  </div>
<% end %>