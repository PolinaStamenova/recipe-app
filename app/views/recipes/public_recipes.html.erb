<% @recipes.each do |recipe| %>
  <div class="recipe-public-data flex-row">
    <div class="recipe-public-left flex-col">
     <p> <%= link_to recipe.name, recipe_path(recipe) %></p>
      <small class = "recipe-by-name">By: <%= recipe.user.name %></small>
    </div>
    <div class="recipe-public-right flex-col">
      <p>Total food items: <%= recipe.recipe_foods.size%></p>
      <p>Total price: <%= sum_of_food_price(recipe.recipe_foods)%></p>


    </div>
  </div>
<% end %>