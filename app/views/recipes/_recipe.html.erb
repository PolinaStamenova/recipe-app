<%= link_to recipe_path(recipe.id) do %>
  <div class="recipe-data">
      <div class="recipe-primary flex-col">
        <p><%= recipe.name%></p>
        <%= button_to "REMOVE", recipe_path(recipe.id), data: { confirm: 'Are you sure you want to delete this recipe?' }, method: :delete, class: "remove-recipe-btn" %>
      </div>
      <div class="recipe-secondary">
        <p><%= recipe.description %></p>
      </div>
  </div>
<% end %>