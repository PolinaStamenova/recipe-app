<%= link_to recipe_path(recipe.id) do %>
  <div class="recipe-data">
      <div class="recipe-primary ">
        <p><%= recipe.name%></p>
         <% if can? :destroy,  recipe %>
          <button>
            <%= link_to "REMOVE", recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "remove-recipe-btn"%>
          </button>
        <%end%>
      </div>
      <div class="recipe-secondary">
        <p><%= recipe.description %></p>
      </div>
  </div>
<% end %>